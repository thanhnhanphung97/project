@model WebApplication1.Models.news

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div style="margin-top:100px;margin-bottom:100px;">
    <h2 style="text-align:center;">@Html.DisplayFor(model => model.name)</h2>
    <div style="text-align:center;margin-bottom:25px;margin-top:25px;">
        @{String img = "/Images/" + Model.img;}
        <img src=@img alt="" height="650" width="1000" />
    </div>
    <div style="color:dimgray;">
        @Html.Raw(@Model.describe)
    </div>
    <div>
        @if (Model.link != "null")
        {
            <br />
            <p style="color:dimgray">Source:</p>
            <br />
            <a href=@Model.link>@Html.DisplayFor(model => model.link)</a>
        }
    </div>
</div>
